<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form-attribute-group" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
            </div>
            <h1>@Text["HeadingTitle"]</h1>
@*            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>*@
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>@(_isModelExist ? Text["Edit"] : Text["Add"])</h3>
            </div>
            <div class="panel-body">
                @if (_model is not null)
                {
                    <EditForm Model=_model class="form-horizontal" OnValidSubmit=@((e) => HandleValidSubmit(_model))>
                        <DataAnnotationsValidator />
                        <ValidationSummary />

                        <p class="form-group required">
                            <label class="col-sm-2 control-label" for="@nameof(_model.AttributeGroupDescriptions.Name)">@nameof(_model.AttributeGroupDescriptions.Name)</label>
                            <InputText class="col-sm-2 form-control" id="@nameof(_model.AttributeGroupDescriptions.Name)" @bind-Value=_model.AttributeGroupDescriptions.Name placeholder="@nameof(_model.AttributeGroupDescriptions.Name)" />
           
                        </p>

                        <p class="form-group">
                            <label class="col-sm-2 control-label" for="@nameof(_model.SortOrder)">@nameof(_model.SortOrder)</label>
                            <InputNumber class="col-sm-10 form-control" id="nameof(_model.SortOrder)" @bind-Value=_model.SortOrder placeholder="nameof(_model.SortOrder)" />
                            
                        </p>

                        <button>Подтвердить</button>
                    </EditForm>
                }

            </div>
        </div>
    </div>
</div>
